{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "react", // preserve 保留JSX 输出jsx文件、react生成React.createElement 输出js
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "/#/*": ["types/*"],
      "/@/*": ["src/*"],
      "/@base/*": ["src/base/*"],
      "/@logic/*": ["src/logic/*"],
      "/@services/*": ["src/base/services/*"],
      "/@store": ["src/base/store/index"],
      "/@store/*": ["src/base/store/*"],
      "/@styles/*": ["src/base/styles/*"],
      "/@settings/*": ["src/base/settings/*"],
      "/@layouts/*": ["src/base/layouts/*"],
      "/@utils/*": ["src/base/utils/*"],
      "/@utils": ["src/base/utils/index"],
      "/@log": ["src/base/utils/log"],
      "/@logicUtils/*": ["src/base/logicUtils/*"],
      "/@router/*": ["src/base/router/*"],
      "/@router": ["src/base/router/index"],
      "/@plugins/*": ["src/base/plugins/*"],
      "/@models/*": ["src/base/services/models/*"],
      "/@enums/*": ["src/base/enums/*"],
      "/@assets/*": ["src/base/assets/*"],
      "/@images/*": ["src/base/assets/images/*"],
      "/@components/*": ["src/base/components/*"],
      "/@views/*": ["src/base/views/*"],
      "/@hooks/*": ["src/base/hooks/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
